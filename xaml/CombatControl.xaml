<!-- Combat Control Panel - TTRPG Plugin for XamlToy -->
<!-- View at: https://xamltoy.noesisengine.com -->
<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#0D0D1A">

    <Grid.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBg" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="SecondaryBg" Color="#2a2a4e"/>
        <SolidColorBrush x:Key="GoldAccent" Color="#ccb588"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#cccccc"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#888888"/>
        <SolidColorBrush x:Key="HelpText" Color="#666666"/>
        <SolidColorBrush x:Key="Success" Color="#4caf50"/>

        <!-- Typography -->
        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource GoldAccent}"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource GoldAccent}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="HelpTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Foreground" Value="{StaticResource HelpText}"/>
            <Setter Property="Height" Value="14"/>
        </Style>

        <Style x:Key="InitiativeEntry" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Height" Value="18"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="DndButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a5e"/>
            <Setter Property="Foreground" Value="#cccccc"/>
            <Setter Property="BorderBrush" Value="#5a5a7e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DndSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2a2a4e"/>
            <Setter Property="Foreground" Value="#aaaaaa"/>
            <Setter Property="BorderBrush" Value="#4a4a6e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Grid.Resources>

    <!-- Main Container -->
    <Border Background="#D91a1a2e" Width="500" Height="450" Padding="20"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            BorderBrush="#4a4a6e" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Combat Control" Style="{StaticResource PageTitle}"/>
                <TextBlock x:Name="combatStatus" Text="Round 3 - Combat Active" FontSize="12" Foreground="{StaticResource SecondaryText}" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Content: Two Columns -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- INITIATIVE COLUMN -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="INITIATIVE ORDER" Style="{StaticResource SectionHeader}"/>

                    <!-- Initiative List Container -->
                    <Border x:Name="InitiativeList" Background="#801a1a2e" Padding="8" Margin="0,0,0,10">
                        <StackPanel>
                            <!-- Visible initiative entries (example data) -->
                            <TextBlock x:Name="initEntry0" Text="1. Sir Galahad (20)" Style="{StaticResource InitiativeEntry}"/>
                            <TextBlock x:Name="initEntry1" Text="2. Goblin Warrior (15)" Style="{StaticResource InitiativeEntry}"/>
                            <TextBlock x:Name="initEntry2" Text="3. Elara the Wise (12)" Style="{StaticResource InitiativeEntry}"/>
                            <TextBlock x:Name="initEntry3" Text="4. Orc Shaman (10)" Style="{StaticResource InitiativeEntry}"/>
                            <TextBlock x:Name="initEntry4" Text="5. Thorne (8)" Style="{StaticResource InitiativeEntry}"/>
                            <!-- Hidden slots -->
                            <TextBlock x:Name="initEntry5" Text="6. Player (5)" Style="{StaticResource InitiativeEntry}" Visibility="Collapsed"/>
                            <TextBlock x:Name="initEntry6" Text="7. Player (3)" Style="{StaticResource InitiativeEntry}" Visibility="Collapsed"/>
                            <TextBlock x:Name="initEntry7" Text="8. Player (2)" Style="{StaticResource InitiativeEntry}" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="rollInitBtn" Content="Roll Initiative" Style="{StaticResource DndSecondaryButton}" Width="180"/>
                </StackPanel>

                <!-- ACTION COLUMN -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="CURRENT TURN" Style="{StaticResource SectionHeader}"/>

                    <!-- Turn Indicator Panel -->
                    <Border x:Name="CurrentTurnBox" Background="#CC2a2a4e" Height="70" Padding="10" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock x:Name="currentTurnLabel" Text="Sir Galahad" FontSize="14" FontWeight="Bold" Foreground="White" Height="22"/>
                            <TextBlock x:Name="turnPromptLabel" Text="Your turn - take your action!" FontSize="12" Foreground="{StaticResource Success}" Height="20"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="ACTIONS" Style="{StaticResource SectionHeader}"/>

                    <!-- Action Buttons -->
                    <StackPanel x:Name="ActionButtons">
                        <Button x:Name="endTurnBtn" Content="End Turn" Style="{StaticResource DndButton}" Width="220" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Height="35" Margin="0,0,0,10">
                            <Button x:Name="startCombatBtn" Content="Start" Style="{StaticResource DndSecondaryButton}" Width="105" Margin="0,0,5,0"/>
                            <Button x:Name="endCombatBtn" Content="End" Style="{StaticResource DndSecondaryButton}" Width="105" Margin="5,0,0,0"/>
                        </StackPanel>

                        <Button x:Name="openSheetBtn" Content="Character Sheet" Style="{StaticResource DndSecondaryButton}" Width="220" Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Help Text -->
                    <StackPanel x:Name="HelpText" Margin="0,20,0,0">
                        <TextBlock Text="Tips:" FontSize="10" FontWeight="Bold" Foreground="{StaticResource SecondaryText}" Margin="0,0,0,5"/>
                        <TextBlock Text="- Roll initiative before starting combat" Style="{StaticResource HelpTextStyle}"/>
                        <TextBlock Text="- Only current player can end their turn" Style="{StaticResource HelpTextStyle}"/>
                        <TextBlock Text="- Use character sheet for dice rolls" Style="{StaticResource HelpTextStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Grid>
