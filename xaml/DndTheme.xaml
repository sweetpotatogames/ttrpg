<!-- DndTheme.xaml - Shared ResourceDictionary for TTRPG Theme -->
<!-- Use this file in multi-file XamlToy gists by referencing: -->
<!-- <ResourceDictionary.MergedDictionaries>
       <ResourceDictionary Source="DndTheme.xaml"/>
     </ResourceDictionary.MergedDictionaries> -->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================================ -->
    <!-- COLOR PALETTE                                                 -->
    <!-- ============================================================ -->
    <!-- Primary Background:   #1a1a2e (Dark purple-blue)              -->
    <!-- Secondary Background: #2a2a4e (Medium purple)                 -->
    <!-- Section Headers:      #ccb588 (Gold/tan)                      -->
    <!-- Primary Text:         #cccccc (Light gray)                    -->
    <!-- Secondary Text:       #888888 (Medium gray)                   -->
    <!-- Help Text:            #666666 (Dark gray)                     -->
    <!-- Ability Label:        #96a9be (Blue-gray)                     -->
    <!-- Success/Positive:     #4caf50 (Green)                         -->
    <!-- Error/Negative:       #f44336 (Red)                           -->
    <!-- Warning:              #ffeb3b (Yellow)                        -->
    <!-- ============================================================ -->

    <SolidColorBrush x:Key="PrimaryBg" Color="#1a1a2e"/>
    <SolidColorBrush x:Key="SecondaryBg" Color="#2a2a4e"/>
    <SolidColorBrush x:Key="GoldAccent" Color="#ccb588"/>
    <SolidColorBrush x:Key="PrimaryText" Color="#cccccc"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#888888"/>
    <SolidColorBrush x:Key="HelpText" Color="#666666"/>
    <SolidColorBrush x:Key="AbilityLabel" Color="#96a9be"/>
    <SolidColorBrush x:Key="Success" Color="#4caf50"/>
    <SolidColorBrush x:Key="Error" Color="#f44336"/>
    <SolidColorBrush x:Key="Warning" Color="#ffeb3b"/>
    <SolidColorBrush x:Key="MovementPhase" Color="#aa88cc"/>
    <SolidColorBrush x:Key="TargetPhase" Color="#cc8877"/>

    <!-- Semi-transparent backgrounds (opacity encoded in alpha) -->
    <!-- 0.95 = F2, 0.9 = E6, 0.85 = D9, 0.8 = CC, 0.6 = 99, 0.5 = 80 -->
    <SolidColorBrush x:Key="PrimaryBg95" Color="#F21a1a2e"/>
    <SolidColorBrush x:Key="PrimaryBg85" Color="#D91a1a2e"/>
    <SolidColorBrush x:Key="PrimaryBg80" Color="#CC1a1a2e"/>
    <SolidColorBrush x:Key="PrimaryBg60" Color="#991a1a2e"/>
    <SolidColorBrush x:Key="PrimaryBg50" Color="#801a1a2e"/>
    <SolidColorBrush x:Key="SecondaryBg90" Color="#E62a2a4e"/>
    <SolidColorBrush x:Key="SecondaryBg80" Color="#CC2a2a4e"/>
    <SolidColorBrush x:Key="SecondaryBg60" Color="#992a2a4e"/>

    <!-- ============================================================ -->
    <!-- TYPOGRAPHY STYLES                                             -->
    <!-- ============================================================ -->

    <!-- Large page title (18px bold, gold) -->
    <Style x:Key="PageTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource GoldAccent}"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <!-- Section divider/header (12px bold, gold) -->
    <Style x:Key="SectionHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource GoldAccent}"/>
        <Setter Property="Margin" Value="0,15,0,10"/>
    </Style>

    <!-- Section header compact spacing -->
    <Style x:Key="SectionHeaderCompact" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource GoldAccent}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Standard body text (11px, light gray) -->
    <Style x:Key="BodyText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
    </Style>

    <!-- Muted/secondary text (10px, medium gray) -->
    <Style x:Key="SecondaryTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
    </Style>

    <!-- Small hint text (9px, dark gray) -->
    <Style x:Key="HelpTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="9"/>
        <Setter Property="Foreground" Value="{StaticResource HelpText}"/>
        <Setter Property="Height" Value="14"/>
    </Style>

    <!-- Tiny hint text for HUD (8px, dark gray) -->
    <Style x:Key="HelpTextSmall" TargetType="TextBlock">
        <Setter Property="FontSize" Value="8"/>
        <Setter Property="Foreground" Value="{StaticResource HelpText}"/>
        <Setter Property="Height" Value="12"/>
    </Style>

    <!-- Ability label style (blue-gray) -->
    <Style x:Key="AbilityLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource AbilityLabel}"/>
        <Setter Property="Width" Value="35"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Initiative entry in lists -->
    <Style x:Key="InitiativeEntry" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="Height" Value="18"/>
    </Style>

    <!-- Compact initiative for HUD -->
    <Style x:Key="InitiativeSlot" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="Height" Value="16"/>
    </Style>

    <!-- ============================================================ -->
    <!-- BUTTON STYLES                                                 -->
    <!-- ============================================================ -->

    <!-- Primary action button -->
    <Style x:Key="DndButton" TargetType="Button">
        <Setter Property="Background" Value="#3a3a5e"/>
        <Setter Property="Foreground" Value="#cccccc"/>
        <Setter Property="BorderBrush" Value="#5a5a7e"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="MinWidth" Value="220"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Secondary action button -->
    <Style x:Key="DndSecondaryButton" TargetType="Button">
        <Setter Property="Background" Value="#2a2a4e"/>
        <Setter Property="Foreground" Value="#aaaaaa"/>
        <Setter Property="BorderBrush" Value="#4a4a6e"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="MinWidth" Value="150"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Small/compact button -->
    <Style x:Key="DndSmallButton" TargetType="Button">
        <Setter Property="Background" Value="#2a2a4e"/>
        <Setter Property="Foreground" Value="#aaaaaa"/>
        <Setter Property="BorderBrush" Value="#4a4a6e"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="5,3"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Width" Value="45"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Dice roller button -->
    <Style x:Key="DiceButton" TargetType="Button">
        <Setter Property="Background" Value="#2a2a4e"/>
        <Setter Property="Foreground" Value="#cccccc"/>
        <Setter Property="BorderBrush" Value="#4a4a6e"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Width" Value="55"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0,0,5,5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- HP control button -->
    <Style x:Key="HpControlButton" TargetType="Button">
        <Setter Property="Background" Value="#2a2a4e"/>
        <Setter Property="Foreground" Value="#aaaaaa"/>
        <Setter Property="BorderBrush" Value="#4a4a6e"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- NPC action button (compact) -->
    <Style x:Key="NpcActionButton" TargetType="Button">
        <Setter Property="Background" Value="#2a2a4e"/>
        <Setter Property="Foreground" Value="#aaaaaa"/>
        <Setter Property="BorderBrush" Value="#4a4a6e"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================================ -->
    <!-- PANEL STYLES                                                  -->
    <!-- ============================================================ -->

    <!-- Dark panel with 85% opacity -->
    <Style x:Key="DndPanel" TargetType="Border">
        <Setter Property="Background" Value="#D91a1a2e"/>
        <Setter Property="Padding" Value="15"/>
    </Style>

    <!-- Content panel with 80% opacity -->
    <Style x:Key="DndContentPanel" TargetType="Border">
        <Setter Property="Background" Value="#CC2a2a4e"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <!-- NPC slot container -->
    <Style x:Key="NpcSlot" TargetType="Border">
        <Setter Property="Background" Value="#801a1a2e"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
        <Setter Property="Padding" Value="5,0"/>
    </Style>

</ResourceDictionary>
