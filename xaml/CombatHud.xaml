<!-- Combat HUD Overlay - TTRPG Plugin for XamlToy -->
<!-- View at: https://xamltoy.noesisengine.com -->
<!-- This compact HUD appears at top-right during combat -->
<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#1a1a2e">

    <Grid.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBg" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="SecondaryBg" Color="#2a2a4e"/>
        <SolidColorBrush x:Key="GoldAccent" Color="#ccb588"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#cccccc"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#888888"/>
        <SolidColorBrush x:Key="HelpText" Color="#666666"/>
        <SolidColorBrush x:Key="Success" Color="#4caf50"/>
        <SolidColorBrush x:Key="MovementPhase" Color="#aa88cc"/>
        <SolidColorBrush x:Key="TargetPhase" Color="#cc8877"/>

        <!-- Initiative Entry Style -->
        <Style x:Key="InitiativeSlot" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Height" Value="16"/>
        </Style>

        <Style x:Key="HelpTextSmall" TargetType="TextBlock">
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="Foreground" Value="{StaticResource HelpText}"/>
            <Setter Property="Height" Value="12"/>
        </Style>
    </Grid.Resources>

    <!-- HUD Container - Positioned at top-right -->
    <StackPanel x:Name="CombatHudRoot" Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0">

        <!-- HEADER PANEL -->
        <Border x:Name="HeaderPanel" Background="#D91a1a2e" Height="30">
            <TextBlock x:Name="roundLabel" Text="Combat Active - Round 3"
                       FontSize="11" FontWeight="Bold" Foreground="{StaticResource GoldAccent}"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Width="190"/>
        </Border>

        <!-- CURRENT TURN PANEL -->
        <Border x:Name="CurrentTurnPanel" Background="#E62a2a4e" Height="50" Margin="0,2,0,0" Padding="8">
            <StackPanel>
                <TextBlock Text="Current Turn" FontSize="9" Foreground="{StaticResource SecondaryText}" Height="12"/>
                <TextBlock x:Name="currentTurnName" Text="Sir Galahad" FontSize="14" FontWeight="Bold" Foreground="White" Height="20"/>
            </StackPanel>
        </Border>

        <!-- TURN PROMPT PANEL -->
        <Border x:Name="PromptPanel" Background="#D91a1a2e" Height="25" Margin="0,2,0,0">
            <TextBlock x:Name="turnPrompt" Text="Your turn!" FontSize="11"
                       Foreground="{StaticResource Success}" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Width="190"/>
        </Border>

        <!-- INITIATIVE ORDER PANEL -->
        <Border x:Name="InitiativePanel" Background="#CC1a1a2e" Margin="0,5,0,0" Padding="8">
            <StackPanel>
                <TextBlock Text="Initiative Order" FontSize="9" Foreground="{StaticResource SecondaryText}" Height="14" Margin="0,0,0,5"/>

                <!-- Initiative slots (compact for HUD) -->
                <TextBlock x:Name="initSlot0" Text="1. Sir Galahad (20)" Style="{StaticResource InitiativeSlot}"/>
                <TextBlock x:Name="initSlot1" Text="2. Goblin Warrior (15)" Style="{StaticResource InitiativeSlot}"/>
                <TextBlock x:Name="initSlot2" Text="3. Orc Shaman (12)" Style="{StaticResource InitiativeSlot}"/>
                <TextBlock x:Name="initSlot3" Text="4. Elara the Wise (10)" Style="{StaticResource InitiativeSlot}"/>
                <TextBlock x:Name="initSlot4" Text="5. Wolf (8)" Style="{StaticResource InitiativeSlot}"/>
                <!-- Hidden slots -->
                <TextBlock x:Name="initSlot5" Style="{StaticResource InitiativeSlot}" Visibility="Collapsed"/>
                <TextBlock x:Name="initSlot6" Style="{StaticResource InitiativeSlot}" Visibility="Collapsed"/>
                <TextBlock x:Name="initSlot7" Style="{StaticResource InitiativeSlot}" Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- MOVEMENT PHASE PANEL (conditionally visible) -->
        <Border x:Name="movementPanel" Background="#E62e1a2e" Margin="0,5,0,0" Padding="8">
            <StackPanel>
                <TextBlock Text="Movement Phase" FontSize="9" Foreground="{StaticResource MovementPhase}" Height="14"/>
                <TextBlock x:Name="movementLabel" Text="Movement: 4/6 blocks" FontSize="11" FontWeight="Bold" Foreground="{StaticResource Success}" Height="18"/>
                <TextBlock x:Name="movementHint" Text="Click to select destination" Style="{StaticResource HelpTextSmall}"/>
            </StackPanel>
        </Border>

        <!-- TARGET PANEL (conditionally visible) -->
        <Border x:Name="targetPanel" Background="#E62e1a1a" Margin="0,5,0,0" Padding="8">
            <StackPanel>
                <TextBlock Text="Target" FontSize="9" Foreground="{StaticResource TargetPhase}" Height="14"/>
                <TextBlock x:Name="targetName" Text="Goblin Warrior" FontSize="12" FontWeight="Bold" Foreground="White" Height="18"/>

                <!-- HP Bar -->
                <Grid x:Name="hpBarContainer" Height="14" Margin="0,2,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- HP Bar Background -->
                    <Border x:Name="hpBarBg" Grid.Column="0" Background="#333333" Height="10">
                        <!-- HP Bar Fill (width represents health percentage) -->
                        <Border x:Name="hpBarFill" Background="#44aa44" Width="80" Height="8"
                                HorizontalAlignment="Left" Margin="1"/>
                    </Border>

                    <!-- HP Text -->
                    <TextBlock x:Name="hpText" Grid.Column="1" Text="8/12" FontSize="9"
                               Foreground="#aaaaaa" Width="60" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </Grid>

                <TextBlock x:Name="targetHint" Text="Click target to deselect" Style="{StaticResource HelpTextSmall}" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- HELP PANEL -->
        <Border x:Name="HelpPanel" Background="#991a1a2e" Height="20" Margin="0,5,0,0">
            <TextBlock Text="/dnd combat for controls" FontSize="8"
                       Foreground="{StaticResource HelpText}" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Width="190"/>
        </Border>
    </StackPanel>
</Grid>
