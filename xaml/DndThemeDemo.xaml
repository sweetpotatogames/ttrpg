<!-- TTRPG Theme Demo - Dark Fantasy D&D Theme for XamlToy -->
<!-- View at: https://xamltoy.noesisengine.com -->
<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#0D0D1A">

    <Grid.Resources>
        <!-- ============================================================ -->
        <!-- COLOR PALETTE                                                 -->
        <!-- ============================================================ -->
        <SolidColorBrush x:Key="PrimaryBg" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="SecondaryBg" Color="#2a2a4e"/>
        <SolidColorBrush x:Key="GoldAccent" Color="#ccb588"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#cccccc"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#888888"/>
        <SolidColorBrush x:Key="HelpText" Color="#666666"/>
        <SolidColorBrush x:Key="AbilityLabel" Color="#96a9be"/>
        <SolidColorBrush x:Key="Success" Color="#4caf50"/>
        <SolidColorBrush x:Key="Error" Color="#f44336"/>
        <SolidColorBrush x:Key="Warning" Color="#ffeb3b"/>

        <!-- ============================================================ -->
        <!-- TYPOGRAPHY STYLES                                             -->
        <!-- ============================================================ -->

        <!-- Large page title (18px bold, gold) -->
        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource GoldAccent}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Section divider/header (12px bold, gold) -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource GoldAccent}"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <!-- Section header compact spacing -->
        <Style x:Key="SectionHeaderCompact" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource GoldAccent}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Standard body text (11px, light gray) -->
        <Style x:Key="BodyText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        </Style>

        <!-- Muted/secondary text (10px, medium gray) -->
        <Style x:Key="SecondaryTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
        </Style>

        <!-- Small hint text (9px, dark gray) -->
        <Style x:Key="HelpTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Foreground" Value="{StaticResource HelpText}"/>
            <Setter Property="Height" Value="14"/>
        </Style>

        <!-- Tiny hint text for HUD (8px, dark gray) -->
        <Style x:Key="HelpTextSmall" TargetType="TextBlock">
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="Foreground" Value="{StaticResource HelpText}"/>
            <Setter Property="Height" Value="12"/>
        </Style>

        <!-- Ability label style (blue-gray) -->
        <Style x:Key="AbilityLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource AbilityLabel}"/>
            <Setter Property="Width" Value="35"/>
        </Style>

        <!-- ============================================================ -->
        <!-- BUTTON STYLES                                                 -->
        <!-- ============================================================ -->

        <!-- Primary action button -->
        <Style x:Key="DndButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a5e"/>
            <Setter Property="Foreground" Value="#cccccc"/>
            <Setter Property="BorderBrush" Value="#5a5a7e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="220"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary action button -->
        <Style x:Key="DndSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2a2a4e"/>
            <Setter Property="Foreground" Value="#aaaaaa"/>
            <Setter Property="BorderBrush" Value="#4a4a6e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small/compact button -->
        <Style x:Key="DndSmallButton" TargetType="Button">
            <Setter Property="Background" Value="#2a2a4e"/>
            <Setter Property="Foreground" Value="#aaaaaa"/>
            <Setter Property="BorderBrush" Value="#4a4a6e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dice roller button -->
        <Style x:Key="DiceButton" TargetType="Button">
            <Setter Property="Background" Value="#2a2a4e"/>
            <Setter Property="Foreground" Value="#cccccc"/>
            <Setter Property="BorderBrush" Value="#4a4a6e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,5,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ============================================================ -->
        <!-- PANEL STYLES                                                  -->
        <!-- ============================================================ -->

        <!-- Dark panel with 85% opacity -->
        <Style x:Key="DndPanel" TargetType="Border">
            <Setter Property="Background" Value="#D91a1a2e"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <!-- Content panel with 80% opacity -->
        <Style x:Key="DndContentPanel" TargetType="Border">
            <Setter Property="Background" Value="#CC2a2a4e"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Grid.Resources>

    <!-- ================================================================ -->
    <!-- THEME SHOWCASE                                                    -->
    <!-- ================================================================ -->
    <Border Style="{StaticResource DndPanel}" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="TTRPG Theme Demo" Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Dark Fantasy D&amp;D 5e Theme" Style="{StaticResource SecondaryTextStyle}" Margin="0,0,0,20"/>

            <!-- Color Palette Section -->
            <TextBlock Text="COLOR PALETTE" Style="{StaticResource SectionHeader}"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Border Width="40" Height="25" Background="{StaticResource PrimaryBg}" Margin="0,0,5,0"/>
                <TextBlock Text="Primary Background (#1a1a2e)" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Border Width="40" Height="25" Background="{StaticResource SecondaryBg}" Margin="0,0,5,0"/>
                <TextBlock Text="Secondary Background (#2a2a4e)" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Border Width="40" Height="25" Background="{StaticResource GoldAccent}" Margin="0,0,5,0"/>
                <TextBlock Text="Gold Accent (#ccb588)" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Border Width="40" Height="25" Background="{StaticResource Success}" Margin="0,0,5,0"/>
                <TextBlock Text="Success/HP (#4caf50)" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Border Width="40" Height="25" Background="{StaticResource Error}" Margin="0,0,5,0"/>
                <TextBlock Text="Error/Damage (#f44336)" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Typography Section -->
            <TextBlock Text="TYPOGRAPHY" Style="{StaticResource SectionHeader}"/>
            <TextBlock Text="Page Title (18px Bold Gold)" Style="{StaticResource PageTitle}"/>
            <TextBlock Text="SECTION HEADER (12px Bold Gold)" Style="{StaticResource SectionHeaderCompact}"/>
            <TextBlock Text="Primary body text (11px Light Gray)" Style="{StaticResource BodyText}" Margin="0,0,0,3"/>
            <TextBlock Text="Secondary muted text (10px Medium Gray)" Style="{StaticResource SecondaryTextStyle}" Margin="0,0,0,3"/>
            <TextBlock Text="- Help/hint text (9px Dark Gray)" Style="{StaticResource HelpTextStyle}"/>

            <!-- Ability Labels -->
            <TextBlock Text="ABILITY LABELS" Style="{StaticResource SectionHeader}"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="STR" Style="{StaticResource AbilityLabelStyle}"/>
                <TextBlock Text="DEX" Style="{StaticResource AbilityLabelStyle}"/>
                <TextBlock Text="CON" Style="{StaticResource AbilityLabelStyle}"/>
                <TextBlock Text="INT" Style="{StaticResource AbilityLabelStyle}"/>
                <TextBlock Text="WIS" Style="{StaticResource AbilityLabelStyle}"/>
                <TextBlock Text="CHA" Style="{StaticResource AbilityLabelStyle}"/>
            </StackPanel>

            <!-- Stat Modifiers -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="+3" Foreground="{StaticResource Success}" FontWeight="Bold" FontSize="14" Width="35"/>
                <TextBlock Text="+1" Foreground="{StaticResource Success}" FontWeight="Bold" FontSize="14" Width="35"/>
                <TextBlock Text="+0" Foreground="{StaticResource PrimaryText}" FontSize="14" Width="35"/>
                <TextBlock Text="-1" Foreground="{StaticResource Error}" FontWeight="Bold" FontSize="14" Width="35"/>
                <TextBlock Text="-2" Foreground="{StaticResource Error}" FontWeight="Bold" FontSize="14" Width="35"/>
            </StackPanel>

            <!-- Button Showcase -->
            <TextBlock Text="BUTTONS" Style="{StaticResource SectionHeader}"/>
            <Button Content="Primary Action" Style="{StaticResource DndButton}" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Button Content="Secondary" Style="{StaticResource DndSecondaryButton}" Width="150" Margin="0,0,8,0"/>
                <Button Content="Alt" Style="{StaticResource DndSecondaryButton}" Width="80"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Button Content="Roll" Style="{StaticResource DndSmallButton}" Margin="0,0,3,0"/>
                <Button Content="Save" Style="{StaticResource DndSmallButton}" Margin="0,0,3,0"/>
                <Button Content="-1" Style="{StaticResource DndSmallButton}" Width="35" Margin="0,0,3,0"/>
                <Button Content="+1" Style="{StaticResource DndSmallButton}" Width="35"/>
            </StackPanel>

            <!-- Dice Buttons -->
            <TextBlock Text="DICE ROLLER" Style="{StaticResource SectionHeader}"/>
            <WrapPanel Orientation="Horizontal">
                <Button Content="D4" Style="{StaticResource DiceButton}"/>
                <Button Content="D6" Style="{StaticResource DiceButton}"/>
                <Button Content="D8" Style="{StaticResource DiceButton}"/>
                <Button Content="D10" Style="{StaticResource DiceButton}"/>
                <Button Content="D12" Style="{StaticResource DiceButton}"/>
                <Button Content="D20" Style="{StaticResource DiceButton}"/>
            </WrapPanel>

            <!-- HP Display Example -->
            <TextBlock Text="HP DISPLAY" Style="{StaticResource SectionHeader}"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="24" FontSize="36" FontWeight="Bold" Foreground="{StaticResource Success}" Width="60"/>
                <TextBlock Text="/" FontSize="28" Foreground="{StaticResource HelpText}" Width="20" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                <TextBlock Text="30" FontSize="28" Foreground="{StaticResource SecondaryText}" Width="50" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Grid>
