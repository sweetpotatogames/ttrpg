$C = "../../../Common.ui";

$C.@PageOverlay {}

$C.@Container {
    Anchor: (Width: 700, Height: 550);
    @CloseButton = true;

    #Title {
        Group {
            $C.@Title {
                @Text = "Character Sheet";
            }
            Label #PlayerName {
                Text: "";
                Style: (FontSize: 14, TextColor: #aaaaaa);
                Anchor: (Top: 5);
            }
        }
    }

    // Combat Status Bar (at top of content)
    Group #CombatStatusBar {
        Anchor: (Height: 45);
        Background: (
            Color: #1a1a2e,
            Opacity: 0.8,
            BorderColor: #3a3a5e,
            BorderSize: 1
        );
        Padding: (Full: 8);
        LayoutMode: Left;

        // Combat status indicator
        Group #CombatStatus {
            Anchor: (Width: 150);
            LayoutMode: Top;

            Label #combatStatusLabel {
                Text: "No Combat";
                Style: (FontSize: 11, RenderBold: true, TextColor: #888888);
                Anchor: (Height: 14);
            }
            Label #turnStatusLabel {
                Text: "";
                Style: (FontSize: 10, TextColor: #888888);
                Anchor: (Height: 14);
            }
        }

        // Combat action buttons
        Group #CombatActions {
            FlexWeight: 1;
            LayoutMode: Left;
            Padding: (Left: 20);

            $C.@SmallPrimaryTextButton #endTurnBtn {
                @Text = "End Turn";
                Anchor: (Width: 90, Height: 30, Right: 10);
            }

            $C.@SmallSecondaryTextButton #openCombatBtn {
                @Text = "Combat Panel";
                Anchor: (Width: 100, Height: 30);
            }
        }
    }

    #Content {
        LayoutMode: Left;
        Padding: (Full: 10);

        // Left Column - Ability Scores
        Group #AbilityScores {
            Anchor: (Width: 200);
            LayoutMode: Top;
            Padding: (Full: 5);

            Label {
                Text: "ABILITY SCORES";
                Style: (FontSize: 12, RenderBold: true, TextColor: #ccb588);
                Anchor: (Bottom: 10);
            }

            // STR
            Group {
                LayoutMode: Left;
                Anchor: (Height: 35, Bottom: 5);
                Label { Text: "STR"; Style: (FontSize: 11, TextColor: #96a9be); Anchor: (Width: 35); }
                Label #strScore { Text: "10"; Style: (FontSize: 18, RenderBold: true); Anchor: (Width: 30); }
                Label #strMod { Text: "+0"; Style: (FontSize: 12, TextColor: #4caf50); Anchor: (Width: 30); }
                $C.@SmallSecondaryTextButton #strRoll { @Text = "Roll"; Anchor: (Width: 45); }
                $C.@SmallSecondaryTextButton #strSave { @Text = "Save"; Anchor: (Width: 45, Left: 3); }
            }

            // DEX
            Group {
                LayoutMode: Left;
                Anchor: (Height: 35, Bottom: 5);
                Label { Text: "DEX"; Style: (FontSize: 11, TextColor: #96a9be); Anchor: (Width: 35); }
                Label #dexScore { Text: "10"; Style: (FontSize: 18, RenderBold: true); Anchor: (Width: 30); }
                Label #dexMod { Text: "+0"; Style: (FontSize: 12, TextColor: #4caf50); Anchor: (Width: 30); }
                $C.@SmallSecondaryTextButton #dexRoll { @Text = "Roll"; Anchor: (Width: 45); }
                $C.@SmallSecondaryTextButton #dexSave { @Text = "Save"; Anchor: (Width: 45, Left: 3); }
            }

            // CON
            Group {
                LayoutMode: Left;
                Anchor: (Height: 35, Bottom: 5);
                Label { Text: "CON"; Style: (FontSize: 11, TextColor: #96a9be); Anchor: (Width: 35); }
                Label #conScore { Text: "10"; Style: (FontSize: 18, RenderBold: true); Anchor: (Width: 30); }
                Label #conMod { Text: "+0"; Style: (FontSize: 12, TextColor: #4caf50); Anchor: (Width: 30); }
                $C.@SmallSecondaryTextButton #conRoll { @Text = "Roll"; Anchor: (Width: 45); }
                $C.@SmallSecondaryTextButton #conSave { @Text = "Save"; Anchor: (Width: 45, Left: 3); }
            }

            // INT
            Group {
                LayoutMode: Left;
                Anchor: (Height: 35, Bottom: 5);
                Label { Text: "INT"; Style: (FontSize: 11, TextColor: #96a9be); Anchor: (Width: 35); }
                Label #intScore { Text: "10"; Style: (FontSize: 18, RenderBold: true); Anchor: (Width: 30); }
                Label #intMod { Text: "+0"; Style: (FontSize: 12, TextColor: #4caf50); Anchor: (Width: 30); }
                $C.@SmallSecondaryTextButton #intRoll { @Text = "Roll"; Anchor: (Width: 45); }
                $C.@SmallSecondaryTextButton #intSave { @Text = "Save"; Anchor: (Width: 45, Left: 3); }
            }

            // WIS
            Group {
                LayoutMode: Left;
                Anchor: (Height: 35, Bottom: 5);
                Label { Text: "WIS"; Style: (FontSize: 11, TextColor: #96a9be); Anchor: (Width: 35); }
                Label #wisScore { Text: "10"; Style: (FontSize: 18, RenderBold: true); Anchor: (Width: 30); }
                Label #wisMod { Text: "+0"; Style: (FontSize: 12, TextColor: #4caf50); Anchor: (Width: 30); }
                $C.@SmallSecondaryTextButton #wisRoll { @Text = "Roll"; Anchor: (Width: 45); }
                $C.@SmallSecondaryTextButton #wisSave { @Text = "Save"; Anchor: (Width: 45, Left: 3); }
            }

            // CHA
            Group {
                LayoutMode: Left;
                Anchor: (Height: 35, Bottom: 5);
                Label { Text: "CHA"; Style: (FontSize: 11, TextColor: #96a9be); Anchor: (Width: 35); }
                Label #chaScore { Text: "10"; Style: (FontSize: 18, RenderBold: true); Anchor: (Width: 30); }
                Label #chaMod { Text: "+0"; Style: (FontSize: 12, TextColor: #4caf50); Anchor: (Width: 30); }
                $C.@SmallSecondaryTextButton #chaRoll { @Text = "Roll"; Anchor: (Width: 45); }
                $C.@SmallSecondaryTextButton #chaSave { @Text = "Save"; Anchor: (Width: 45, Left: 3); }
            }
        }

        // Center Column - HP & Combat
        Group #CombatInfo {
            Anchor: (Width: 220);
            LayoutMode: Top;
            Padding: (Full: 10);

            Label {
                Text: "HIT POINTS";
                Style: (FontSize: 12, RenderBold: true, TextColor: #ccb588);
                Anchor: (Bottom: 10);
            }

            Group #HpDisplay {
                LayoutMode: Left;
                Anchor: (Height: 50, Bottom: 10);

                Label #CurrentHp {
                    Text: "10";
                    Style: (FontSize: 36, RenderBold: true, TextColor: #4caf50);
                    Anchor: (Width: 60);
                }
                Label {
                    Text: "/";
                    Style: (FontSize: 28, TextColor: #666666);
                    Anchor: (Width: 20);
                }
                Label #MaxHp {
                    Text: "10";
                    Style: (FontSize: 28, TextColor: #888888);
                    Anchor: (Width: 50);
                }
            }

            Group #HpControls {
                LayoutMode: Left;
                Anchor: (Height: 35, Bottom: 15);

                $C.@SmallSecondaryTextButton #hpMinus5 { @Text = "-5"; Anchor: (Width: 40); }
                $C.@SmallSecondaryTextButton #hpMinus { @Text = "-1"; Anchor: (Width: 40, Left: 3); }
                $C.@SmallSecondaryTextButton #hpPlus { @Text = "+1"; Anchor: (Width: 40, Left: 3); }
                $C.@SmallSecondaryTextButton #hpPlus5 { @Text = "+5"; Anchor: (Width: 40, Left: 3); }
            }

            Label {
                Text: "ARMOR CLASS";
                Style: (FontSize: 12, RenderBold: true, TextColor: #ccb588);
                Anchor: (Bottom: 5, Top: 10);
            }

            Label #ArmorClass {
                Text: "10";
                Style: (FontSize: 28, RenderBold: true);
                Anchor: (Bottom: 15);
            }

            $C.@SecondaryTextButton #rollInitiative {
                @Text = "Roll Initiative";
                Anchor: (Width: 150, Height: 35);
            }
        }

        // Right Column - Dice Roller
        Group #DiceRoller {
            FlexWeight: 1;
            LayoutMode: Top;
            Padding: (Full: 10);

            Label {
                Text: "DICE ROLLER";
                Style: (FontSize: 12, RenderBold: true, TextColor: #ccb588);
                Anchor: (Bottom: 15);
            }

            Group #DiceButtons {
                LayoutMode: LeftWrapping;

                $C.@SecondaryTextButton #rollD4 { @Text = "d4"; Anchor: (Width: 55, Height: 40, Right: 5, Bottom: 5); }
                $C.@SecondaryTextButton #rollD6 { @Text = "d6"; Anchor: (Width: 55, Height: 40, Right: 5, Bottom: 5); }
                $C.@SecondaryTextButton #rollD8 { @Text = "d8"; Anchor: (Width: 55, Height: 40, Right: 5, Bottom: 5); }
                $C.@SecondaryTextButton #rollD10 { @Text = "d10"; Anchor: (Width: 55, Height: 40, Right: 5, Bottom: 5); }
                $C.@SecondaryTextButton #rollD12 { @Text = "d12"; Anchor: (Width: 55, Height: 40, Right: 5, Bottom: 5); }
                $C.@SecondaryTextButton #rollD20 { @Text = "d20"; Anchor: (Width: 55, Height: 40, Right: 5, Bottom: 5); }
            }
        }
    }
}
